<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/imageSeller"
        />
    <TextView
        android:id="@+id/textviewSeller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="265dp"
        android:layout_marginLeft="375dp"
        android:background="@drawable/border"
        android:padding="5dp"
        android:text="Price"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageSeller"
        android:id="@+id/tv1Seller"
        android:text="1"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"



        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1Seller"
        android:id="@+id/tv2Seller"
        android:text="2"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv2Seller"
        android:id="@+id/tv3Seller"
        android:text="3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:paddingBottom="30dp"


        />

    <Button
        android:id="@+id/deleteButtonSeller"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_below="@+id/tv3Seller"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"

        />

</RelativeLayout>